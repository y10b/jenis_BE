# App
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# Database
DATABASE_URL="postgresql://backoffice:backoffice123@localhost:5432/backoffice"

# Redis
REDIS_URL=redis://localhost:6379

# JWT (운영 시 반드시 변경!)
# 생성 방법: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-must-be-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-key-32-chars-here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Encryption (32자 - 운영 시 반드시 변경!)
# 생성 방법: openssl rand -hex 16
ENCRYPTION_KEY=your-encryption-key-32-characters

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/v1/integrations/github/callback

# Slack OAuth
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_REDIRECT_URI=http://localhost:3000/api/v1/integrations/slack/callback

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
